@using Microsoft.AspNetCore.Mvc.Localization
@using IdentityServer.Admin.UI.Configuration.Constants
@model IdentityServer.Admin.BusinessLogic.Dtos.Configuration.ClientDto
@inject IViewLocalizer Localizer

<div class="card mt-3">
    <h5 class="card-header">@Localizer["PanelTitle"]</h5>
    <div class="card-body">

        <!--Select-->
        <div class="form-group row d-none">
            <label asp-for="ProtocolType" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Client/Section/Label", "ProtocolType")
            </label>
            <div class="col-sm-9">
                <select asp-for="ProtocolType" asp-items="@(new SelectList(Model.ProtocolTypes,"Id","Text"))" class="form-control single-select"></select>
            </div>
        </div>

        <nav>
            <div class="nav nav-tabs mt-3" id="nav-advanced-tab" role="tablist">
                @if (Model.Id != 0)
                {
                    <a class="nav-item nav-link active" id="nav-advanced-granttypes-tab" data-toggle="tab" href="#nav-advanced-granttypes" role="tab" aria-controls="nav-granttypes" aria-selected="false">@Localizer["NavGrantTypes"]</a>
                    <a class="nav-item nav-link" id="nav-advanced-authentication-tab" data-toggle="tab" href="#nav-advanced-authentication" role="tab" aria-controls="nav-authentication" aria-selected="true">@Localizer["NavAuthentication"]</a>
                    <a class="nav-item nav-link" id="nav-advanced-token-tab" data-toggle="tab" href="#nav-advanced-token" role="tab" aria-controls="nav-token" aria-selected="false">@Localizer["NavToken"]</a>
                    <a class="nav-item nav-link" id="nav-advanced-consent-tab" data-toggle="tab" href="#nav-advanced-consent" role="tab" aria-controls="nav-consent" aria-selected="false">@Localizer["NavConsent"]</a>
                    <a class="nav-item nav-link" id="nav-advanced-deviceflow-tab" data-toggle="tab" href="#nav-advanced-deviceflow" role="tab" aria-controls="nav-deviceflow" aria-selected="false">@Localizer["NavDeviceFlow"]</a>
                    <a class="nav-item nav-link" id="nav-advanced-clientproperties-tab" data-toggle="tab" href="#nav-advanced-clientproperties" role="tab" aria-controls="nav-clientproperties" aria-selected="false">@Localizer["NavClientProperties"]</a>
                    
                }
            </div>
        </nav>

        <div class="tab-content" id="nav-advanced-tabContent">



            @if (Model.Id != 0)
            {
                <div class="tab-pane show active" id="nav-advanced-granttypes" role="tabpanel" aria-labelledby="nav-granttypes-tab">
                    @await Html.PartialAsync("Client/Section/GrantTypes")
                </div>
                <div class="tab-pane" id="nav-advanced-authentication" role="tabpanel" aria-labelledby="nav-authentication-tab">
                    @await Html.PartialAsync("Client/Section/Authentication")
                </div>
                <div class="tab-pane" id="nav-advanced-token" role="tabpanel" aria-labelledby="nav-token-tab">
                    @await Html.PartialAsync("Client/Section/Token")
                </div>
                <div class="tab-pane" id="nav-advanced-consent" role="tabpanel" aria-labelledby="nav-consent-tab">
                    @await Html.PartialAsync("Client/Section/Consent")
                </div>
                <div class="tab-pane" id="nav-advanced-deviceflow" role="tabpanel" aria-labelledby="nav-deviceflow-tab">
                    @await Html.PartialAsync("Client/Section/DeviceFlow")
                </div>
                <div class="tab-pane" id="nav-advanced-clientproperties" role="tabpanel" aria-labelledby="nav-clientproperties-tab">
                    @await Html.PartialAsync("Client/Section/ClientProperties")
                </div>
            }
        </div>

    </div>
</div>